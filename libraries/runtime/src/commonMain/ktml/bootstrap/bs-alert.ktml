enum class AlertStyle {
    primary, secondary, success, danger, warning, info, light, dark
}

<bs-alert style="${AlertStyle = AlertStyle.info}" dismissible="${Boolean = false}" class="${String = ''}" content="$Content">
    <div class="alert ${cssClass('alert-$style', `class`)}" role="alert">
        $content
        <button if="${dismissible}" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</bs-alert>
