<html lang="en" @error="${String? = null}">
<pre-login-layout title="Register - Task Manager">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-check2-square text-primary" style="font-size: 3rem;"></i>
                            <h1 class="h3 mb-3 fw-normal">Task Manager</h1>
                            <p class="text-muted">Create your account</p>
                        </div>

                        <div id="register-form">
                            <register-form error="${error}"/>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3 text-muted">
                    <small>Built with KTML &amp; Ktor &middot; Powered by Kotlin</small>
                </div>
            </div>
        </div>
    </div>
</pre-login-layout>
</html>
