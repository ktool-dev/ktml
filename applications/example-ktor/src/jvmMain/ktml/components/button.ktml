<tm-button iconName="${String? = null}"
           text="$String"
           variant='${String = "primary"}'
           size="${String = 'sm'}"
           outline="${Boolean = false}"
           extraClass="${String? = null}">
    <button class="${buildClass('btn', Triple(outline, 'btn-outline-$variant', 'btn-$variant'), 'btn-$size', extraClass)}">
        <icon name="${iconName}" if="${iconName != null}"></icon>
        ${text}
    </button>
</tm-button>
